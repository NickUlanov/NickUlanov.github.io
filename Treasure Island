import sys
print('Welcome ot Treasure Island. Your mission is to find the treasure')
choice1 = input('You are at a cross road. Where do you want to go? Type "left" or "right"\n').lower()
if choice1 == 'left':
    pass
else:
    print('Game Over')
    sys.exit()
choice2 = input(
    "You come to a lake. There is an island in the middle of the lake. Type \"wait\" to wait for a board. Type "
    "\"swim\" to swim across.\n").lower()
if choice2 == 'wait':
    pass
else:
    print('Game Over')
    sys.exit()
choice3 = input('You arrive at the island unharmed. There is a house with 3 doors. One red, one yellow and one blue. '
                'Which color do you chose?\n').lower()
if choice3 == 'yellow':
    print('You Win!')
else:
    print('Game Over')
